= stylesheet_inline_tag "custom_page/pages/series_a8.css"
=# stylesheet_inline_tag "custom_page/pages/series_a8/#{data['theme']}.css" unless data['theme'].blank?
- flash = request.fullpath.match(/\?flash$/)
.seriesbox.series_a8(style="margin-bottom: #{v = (data['style']||{})['margin-bottom']; v.blank? ? 12 : v}px;")
	%a.leftlink(href="#{legacy_url(data['url'], flash)}" target="_blank")
		= image_tag data['pic'], :class => 'pic', :alt => data['title']
	.textbox
		.title= h data['title']
		.description= simple_format h data['description']
	= render :partial => 'admin/custom_page/pages/series_preview', :locals => { :data => data }
