<%= form_for(User.new, :as => :user, :url => session_path(:user, format: "json"), remote: true, :html => {:role => 'form', id: "user_sign_in"}) do |f| %>
    <div id="flash_inner_message">
    </div>
    <div class="form-group">
      <%= f.text_field :nickname, class: 'form-control', placeHolder: "用户名" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', autocomplete: "off", placeHolder: "密码" %>
    </div>
    <div class="form-group">
      <%= f.label "remember_me" do %>
          <%= f.check_box :remember_me, checked: true %>&nbsp;记住登录
      <% end %>
      <label class="pull-right"><%= link_to "忘记密码?", new_password_path(:user), class: 'right link-gray' %></label>
    </div>
    <%= f.submit "登录", :class => 'btn btn-block' %>
<% end %>
