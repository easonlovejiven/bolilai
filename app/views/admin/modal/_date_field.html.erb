<% field_class = {class: 'form-control', value: f.object.send(field).try(:strftime, '%Y-%m-%d %H:%M'), data: {provide: provide ||= 'datepicker-inline'}}.merge!(f.options[:options_class]) %>

<fieldset>
	<div class="form-group">
		<%= f.label field, class: 'col-md-3 control-label' do -%>
			<%= raw('<sup>*</sup>') if defined?(required) && required %>
			<%= model.human_attribute_name(field) %>
		<% end -%>

		<div class="">
			<% field_class.merge!(required: true) if defined?(required) && required %>
			<%= f.text_field field, field_class %>
		</div>
	</div>
</fieldset>
