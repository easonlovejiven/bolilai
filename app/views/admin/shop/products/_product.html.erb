<% if product %>
	<%= link_to product.major_pic.blank? ? content_tag(:span, '', style: "width:50px;height:50px;margin:0;vertical-align:middle;background-color:#fafafa;display:inline-block;") : image_tag("#{product.major_image.url(:thumb)}", style: "width:50px;height:50px;margin:0;vertical-align:middle;", alt: ''), product, title: product.name %>
	<%= link_to product.name, admin_shop_product_path(product), "data-target"=>'rightPanel' %>
<% end %>
