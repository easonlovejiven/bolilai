<%= link_to t('show'), record, class: 'btn btn-xs btn-default', data: {target: 'rightPanel'} if can?(:show, record)%>
<%= link_to t('copy'), [:new, model.model_name.singular, {id: record.id}], class: 'btn btn-xs btn-default', data: {target: 'rightPanel'} if can?(:create, record) %>
<%= link_to t('edit'), [:edit, record], class: 'btn btn-xs btn-default', data: {target: 'rightPanel'} if can?(:update, record) %>
<%= link_to t('destroy'), record, data: {confirm: t('confirm'), method: 'delete'}, class: 'btn btn-xs btn-danger' if can?(:destroy, record) %>
